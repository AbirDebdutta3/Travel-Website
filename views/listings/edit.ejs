

    <% layout('layouts/boilerplate') -%>
    
    <h3 class="mt-3">Edit Your Listing</h3>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
        <div class="mb-3 mt-3" >
            <label for="title" class="form-label"> Title</label>
            <input type="text" name="listing[title]" value="<%= listing.title %>" required class="form-control">
            <div class="invalid-feedback">
               Title is required.
               </div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Enter Description" required class="form-control"><%= listing.description %></textarea>
            <div class="invalid-feedback">
                Please enter a description.
                </div>
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]" placeholder="Enter Price" required class="form-control" value="<%= listing.price %>">
                <div class="invalid-feedback">
                    Price is required.
                    </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" placeholder="Enter Country" required class="form-control" value="<%= listing.country %>">
                <div class="invalid-feedback">
                    Country is required.
                    </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" placeholder="Enter Location" required class="form-control" value= "<%= listing.location %>">
            <div class="invalid-feedback">
                Location is required.
                </div>
        </div>
        
        
        <div class="mb-3">
            <label for="image url" class="form-label">Image URL</label>
            <input type="text" name="listing[image][url]" placeholder="Enter Image URL" required class="form-control"   value="<%= listing.image.url %>">
            <div class="invalid-feedback">
                Image URL is required.
                </div>
        </div>

        <div class="mb-3">
            <label for="image alt text" class="form-label">Image Alt Text</label>
            <input type="text" name="listing[image][filename]" placeholder="Enter Image Alt Text" class="form-control" value="<%= listing.image.filename %>">
        </div>
        <button type="submit" class="btn btn-dark edit-btn mb-3">Update</button>
    </form>
