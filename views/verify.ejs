
<%- layout('layouts/boilerplate') %>
<style>
    body {
        background: linear-gradient(135deg, #f8fafc 0%, #e0e7ef 100%);
        min-height: 100vh;
    }
    .verify-card {
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(44,62,80,0.08);
        background: #ffffff;
        padding: 2.5rem 2rem 2rem 2rem;
    }
    .verify-title {
        font-family: 'Plus Jakarta Sans', sans-serif;
        font-weight: 700;
        color: #000000;
        letter-spacing: 1px;
    }
    .verify-btn {
        background: #e74c3c;
        border: none;
        font-weight: 600;
    }
    .verify-btn:hover {
        background: #c0392b;
    }
    .resend-link {
        color: #e74c3c;
        font-weight: 500;
    }
    .resend-link:hover {
        text-decoration: underline;
        color: #c0392b;
    }
</style>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="col-md-6 col-lg-5">
        <div class="card verify-card">
            <div class="card-body">
                <h2 class="text-center verify-title mb-4">Email Verification</h2>
                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>
                <form action="/verify" method="POST" autocomplete="off">
                    <div class="mb-3">
                        <label for="otp" class="form-label">Enter OTP</label>
                        <input type="text" class="form-control" id="otp" name="otp" required 
                               pattern="[0-9]{6}" maxlength="6" placeholder="Enter 6-digit OTP">
                        <div class="form-text">Please enter the 6-digit OTP sent to your email.</div>
                    </div>
                    <input type="hidden" name="email" value="<%= email %>">
                    <input type="hidden" name="userType" value="<%= userType %>">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn verify-btn">Verify Email</button>
                    </div>
                </form>
                <div class="text-center mt-3">
                    <p>Didn't receive the OTP? <a class="resend-link" href="/resend-otp?email=<%= email %>&userType=<%= userType %>">Resend OTP</a></p>
                </div>
            </div>
        </div>
    </div>
</div>


